@page
@model BankingApp.Pages.WithdrawModel
@{
    ViewData["Title"] = "Withdraw";
}
@{
    string FirstName = Model.UserSession.FirstName;

    string ErrorMessage = "";
    if (Model.InvalidWithdraw == true) ErrorMessage = "Unable to process this transaction. Please Try Again.";
}

<header>
    <h2>Welcome @FirstName!</h2>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/AccountHome">Overview</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Withdraw">Withdraw</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Deposit">Deposit</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/EditAccount">Edit Account</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Index">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container border" style="padding: 10px">
    <h3>Withdraw (Unfinished)</h3>
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <!--Amount_To_Deposit Collection-->
        <div class="form-group-row">
            <div class="col-2" style="padding-bottom: 10px">
                <label asp-for="Amount_To_Withdraw">Amount To Deposit:</label>
            </div>
            <div class="col-5" style="padding-bottom: 20px">
                <input type="text" asp-for="Amount_To_Withdraw" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Amount_To_Withdraw"></span>
        </div>

        <h5>Balance: $@Model.UserSession.Balance</h5>

        <!--Submit Button-->
        <div class="form-group-row" style="padding-top:10px">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Deposit" />
            </div>
            <div class="col-3">

            </div>
        </div>
    </form>
    <p>
        <br />
        <span style="color:red; padding-top:20px">@ErrorMessage</span>
    </p>
</div>
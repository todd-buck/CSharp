@page
@model BankingApp.Pages.EditAccountModel
@{
    ViewData["Title"] = "Edit Account";
}
@{
    string FirstName = Model.UserSession.FirstName;
    string LastName = Model.UserSession.LastName;
    string Pin = Model.UserSession.Pin;
}

<header>
    <h2>Welcome @FirstName!</h2>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/AccountHome">Overview</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Withdraw">Withdraw</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Deposit">Deposit</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/EditAccount">Edit Account</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Index">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container border" style="padding: 20px">
    <h3>Edit Account Information (Unfinished)</h3>
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <!--FirstName Change, pre-filled with UserSession data-->
        <div class="form-group-row">
            <div class="col-2" style="padding-bottom: 10px">
                <label asp-for="UserSession.FirstName">First Name:</label>
            </div>
            <div class="col-5" style="padding-bottom: 20px">
                <input type="text" asp-for="UserSession.FirstName" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="UserSession.FirstName"></span>
        </div>

        <!--LastName Change, pre-filled with UserSession data-->
        <div class="form-group-row">
            <div class="col-2" style="padding-bottom: 10px">
                <label asp-for="UserSession.LastName">Last Name:</label>
            </div>
            <div class="col-5" style="padding-bottom: 20px">
                <input type="text" asp-for="UserSession.LastName" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="UserSession.LastName"></span>
        </div>

        <!--Pin Change, pre-filled with UserSession data-->
        <div class="form-group-row">
            <div class="col-2" style="padding-bottom: 10px">
                <label asp-for="UserSession.Pin">Pin:</label>
            </div>
            <div class="col-5" style="padding-bottom: 20px">
                <input type="text" asp-for="UserSession.Pin" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="UserSession.Pin"></span>
        </div>

        <!--Submit Button-->
        <div class="form-group-row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
            <div class="col-3">

            </div>
        </div>
    </form>

</div>
